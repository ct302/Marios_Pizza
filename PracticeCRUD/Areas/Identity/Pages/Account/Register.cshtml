@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-12 mt-5">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="font-family: 'Bauhaus 93'; background-color:whitesmoke; border: 3px black solid; border-radius:50px; font-size: 2em;" class=" text-center">Create a new account.</h4>

            <div class="col-12" style="background-color:wheat; overflow-wrap:break-word;">
                    <h1>Demo Admin Credentials</h1>
                    <p>Username: Demoadmin1@gmail.com</p>
                    <p>Password: Abc123!</p>
            </div>
            <hr />
            <div asp-validation-summary="All" class="text-warning"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
            </div>
            <div style="position: relative; margin-left: auto; margin-right: auto;" class="d-flex justify-content-center mt-3">
                <div class="m-5">
                <button type="submit" class="btn btn-success">Register</button>
                <a class="btn btn-danger" href ="/">Go Back</a>
                
                    
                </div>

            </div>
        </form>
    </div>
  
</div>




<style>


    .form-group{

        color: gold;
        font-family: Bahnschrift;

    }

    .btn {

        font-family:'Baskerville Old Face';
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
